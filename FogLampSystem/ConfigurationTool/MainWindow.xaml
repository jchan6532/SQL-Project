<Window x:Class="ConfigurationTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ConfigurationTool"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="600">
    <Grid
        Margin="20">

        <Button
            Content="Add"
            Margin="15"
            MaxHeight="20"
            MinHeight="20"
            MaxWidth="60"
            MinWidth="60"
            VerticalAlignment="Top"
            HorizontalAlignment="Right"
            x:Name="AddConfigurationBtn"
            Click="AddConfigurationBtn_Click"
            />

        <StackPanel
            Orientation="Vertical"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Margin="0 20"
            x:Name="Configurations"
            >

            <StackPanel 
                Orientation="Horizontal"
                HorizontalAlignment="Center"
                Margin="0 5"
                >
                <Label 
                    Content="Harness" 
                    Margin="10 0"
                    FontSize="15"
                    />
                <TextBox
                    Width="100" 
                    Margin="10 0"
                    FontSize="15"
                    PreviewTextInput="TextBox_PreviewTextInput"
                    />
            </StackPanel>

            <StackPanel 
                Orientation="Horizontal"
                HorizontalAlignment="Center"
                Margin="0 5"
                >
                <Label 
                    Content="Reflector" 
                    Margin="10 0"
                    FontSize="15"
                    />
                <TextBox
                    Width="100" 
                    Margin="10 0"
                    FontSize="15"
                    PreviewTextInput="TextBox_PreviewTextInput"
                    />
            </StackPanel>

            <StackPanel 
                Orientation="Horizontal"
                HorizontalAlignment="Center"
                Margin="0 5"
                >
                <Label 
                    Content="Housing" 
                    Margin="10 0"
                    FontSize="15"
                    />
                <TextBox
                    Width="100" 
                    Margin="10 0"
                    FontSize="15"
                    PreviewTextInput="TextBox_PreviewTextInput"
                    />
            </StackPanel>

            <StackPanel 
                Orientation="Horizontal"
                HorizontalAlignment="Center"
                Margin="0 5"
                >
                <Label 
                    Content="Lens" 
                    Margin="10 0"
                    FontSize="15"
                    />
                <TextBox
                    Width="100" 
                    Margin="10 0"
                    FontSize="15"
                    PreviewTextInput="TextBox_PreviewTextInput"
                    />
            </StackPanel>

            <StackPanel 
                Orientation="Horizontal"
                HorizontalAlignment="Center"
                Margin="0 5"
                >
                <Label 
                    Content="Bulb" 
                    Margin="10 0"
                    FontSize="15"
                    />
                <TextBox
                    Width="100" 
                    Margin="10 0"
                    FontSize="15"
                    PreviewTextInput="TextBox_PreviewTextInput"
                    />
            </StackPanel>

            <StackPanel 
                Orientation="Horizontal"
                HorizontalAlignment="Center"
                Margin="0 5"
                >
                <Label 
                    Content="Bezel" 
                    Margin="10 0"
                    FontSize="15"
                    />
                <TextBox
                    Width="100" 
                    Margin="10 0"
                    FontSize="15"
                    PreviewTextInput="TextBox_PreviewTextInput"
                    />
            </StackPanel>

            <Button
                Content="Export Configuration"
                x:Name="ExportDataBtn"
                Click="ExportDataBtn_Click"
                Margin="10"
                />

            <TextBlock
                Text=""
                Foreground="Red"
                x:Name="ErrorMsg"
                />

        </StackPanel>

    </Grid>
</Window>
